CREATE TABLE DEPARTMENT
(
DEPTID VARCHAR2(10),
DEPTNAME VARCHAR(50),

PRIMARY KEY(DEPTID)
);
CREATE TABLE STUDENT
(
STUDENT_USN VARCHAR2(20),
STUDENT_NAME VARCHAR2(30),
STUDENT_AGE NUMBER(2),
STUDENT_CGPA NUMBER(5,2),
DEPTID VARCHAR2(10),
FOREIGN KEY(DEPTID) REFERENCES DEPARTMENT(DEPTID)
);
ALTER TABLE STUDENT MODIFY STUDENT_CGPA DECIMAL(5,2);
INSERT INTO DEPARTMENT VALUES

('&DEPTID','&DEPTNAME');
INSERT INTO STUDENT VALUES

('&STUDENT_USN','&STUDENT_NAME',&STUDENT_AGE,&STUDENT_CGPA,'&DEPTID');
